{% extends "layout.html" %}

{% block title %}{{title}}{% endblock %}

{% block content %}


{% for article in latest_articles %}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{ article.title }}</h5>
      <p class="card-text">{{ article.content }}</p>
      <a href="/delete/{{ article.id }}" class="btn btn-danger">حذف</a>
    </div>
  </div>
{% endfor %}
{% endblock %}
